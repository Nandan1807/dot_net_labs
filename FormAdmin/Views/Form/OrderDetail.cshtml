@model FormAdmin.Models.OrderDetailModel

<section class="section">
    <div class="row">
        <div class="col-lg">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order Detail Form</h5>

                    <!-- General Form Elements -->
                    <form method="post">
                        <div class="row mb-3">
                            <div class="col-sm-2">
                                <label asp-for="OrderID" class="col-form-label">Order ID</label>
                            </div>
                            <div class="col-sm-10">
                                <select class="form-control" asp-for="OrderID">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                                <span asp-validation-for="OrderID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-2">
                                <label asp-for="ProductID" class="col-form-label">Product ID</label>
                            </div>
                            <div class="col-sm-10">
                                <select class="form-control" asp-for="ProductID">
                                    <option value="1">Coffee</option>
                                    <option value="2">Cold Coffee</option>
                                    <option value="3">Cocoa</option>
                                    <option value="4">Tea</option>
                                    <option value="5">Special Tea</option>
                                </select>
                                <span asp-validation-for="ProductID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-2">
                                <label asp-for="Quantity" class="col-form-label">Quantity</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" asp-for="Quantity" placeholder="Enter Quantity">
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-2">
                                <label asp-for="Amount" class="col-form-label">Amount</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" asp-for="Amount" placeholder="Enter Amount">
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-2">
                                <label asp-for="TotalAmount" class="col-form-label">Total Amount</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" asp-for="TotalAmount" placeholder="Enter Total Amount">
                                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-2">
                                <label asp-for="UserID" class="col-form-label">User ID</label>
                            </div>
                            <div class="col-sm-10">
                                <select class="form-control" asp-for="UserID">
                                    <option value="1">Himanshu</option>
                                    <option value="2">Abhi</option>
                                    <option value="3">Harsh</option>
                                    <option value="4">Krunal</option>
                                    <option value="5">Abhay</option>
                                </select>
                                <span asp-validation-for="UserID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Submit Form</button>
                            </div>
                        </div>
                    </form><!-- End General Form Elements -->

                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}