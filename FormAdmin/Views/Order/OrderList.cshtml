@model DataTable;
@using System.Data;

<div class="container">
    <div class="row">
        <div class="col-6"></div>
        <div class="col-lg-6 p-4">
            <a asp-controller="Order" asp-action="OrderAddEdit"><input type="button" value="ADD" class="btn btn-primary"></a>
        </div>
    </div>
</div>
<h5 class="text-danger">@TempData["ErrorMessage"]</h5>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">OrderID</th>
            <th scope="col">OrderDate</th>
            <th scope="col">CustomerName</th>
            <th scope="col">PaymentMode</th>
            <th scope="col">TotalAmount</th>
            <th scope="col">ShippingAddress</th>
            <th scope="col">UserName</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (DataRow dataRow in Model.Rows)
            {
            <tr>
                <td>@dataRow["OrderID"]</td>
                <td>@dataRow["OrderDate"]</td>
                <td>@dataRow["CustomerName"]</td>
                <td>@dataRow["PaymentMode"]</td>
                <td>@dataRow["TotalAmount"]</td>
                <td>@dataRow["ShippingAddress"]</td>
                <td>@dataRow["UserName"]</td>
                <td><a asp-controller="Form" asp-action="Order"><i class="bi bi-pencil"></i></a></td>
                <td>
                    <form method="post" asp-controller="Order" asp-action="OrderDelete">
                        <input type="hidden" name="OrderID" value="@dataRow["OrderID"]" />
                        <button type="submit" class="btn btn-outline-danger btn-xs">
                            <i class="bi bi-x"></i>
                        </button>
                    </form>
                </td>
            </tr>
            }
        </tr>
    </tbody>
</table>