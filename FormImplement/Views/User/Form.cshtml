@model FormImplement.Models.UserModel

<!-- General Form Elements -->
<div class="pagetitle">
    <h1>User Details</h1>
</div><!-- End Page Title -->

<form asp-action="UserSave" asp-controller="User" method="post" >
    <div class="row mb-3">
        @* <label for="UserId" class="col-sm-2 col-form-label">User Id</label> *@
        <div class="col-sm-10">
            <input type="hidden"  asp-for="UserID" class="form-control" placeholder="User ID">
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="UserName" class="col-sm-2 col-form-label">User Name</label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" placeholder="User Name">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="MobileNo" class="col-sm-2 col-form-label">MobileNo</label>
        <div class="col-sm-10">
            <input asp-for="MobileNo" class="form-control" placeholder="Phone">
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Address" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
            <textarea asp-for="Address" class="form-control" placeholder="Address"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="IsActive" class="col-sm-2 col-form-label">Is Active</label>
        <div class="col-sm-10">
            <input asp-for="IsActive" type="checkbox" class="form-check-input">
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Submit Form</button>
        </div>
    </div>
</form><!-- End General Form Elements -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
