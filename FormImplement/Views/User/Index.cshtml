@using System.Data

    <style>
        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #ddd;
        }

        /* Column-specific styling */
        .product-id {
            width: 10%;
        }

        .product-name {
            width: 25%;
        }

        .product-price {
            width: 15%;
        }

        .product-code {
            width: 15%;
        }

        .description {
            width: 25%;
        }

        .user-id {
            width: 10%;
        }
    </style>
<div class="row mb-3">
    <div class="col-sm-10">
        <a asp-controller="User" asp-action="Form" type="submit" class="btn btn-primary">Add</a>
    </div>
</div>
    <div>
    <table>
        <thead>
            <tr>
                <th class="product-id">UserId</th>
                <th class="product-name">UserName</th>
                <th class="product-price">Email</th>
                <th class="product-code">Address</th>
                <th class="description">MobileNo</th>
                <th class="user-id">IsActive</th>
                <th class="action">action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (DataRow dataRow in Model.Rows)
            {
                <tr>
                    <td>@dataRow["UserID"]</td>
                    <td>@dataRow["UserName"]</td>
                    <td>@dataRow["Email"]</td>
                    <td>@dataRow["Address"]</td>
                    <td>@dataRow["MobileNo"]</td>
                    <td>@dataRow["IsActive"]</td>
                    <td>
                    
                        <a asp-controller="User" asp-action="Form" asp-route-UserID="@dataRow["UserID"]">
                            <button class="btn btn-success m-1">UPDATE</button>
                        </a>
                        <form method="post" asp-controller="User" asp-action="UserDelete">
                            <input type="hidden" name="UserID" value="@dataRow["UserID"]" />
                            <button class="btn btn-danger m-1">DELETE</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>