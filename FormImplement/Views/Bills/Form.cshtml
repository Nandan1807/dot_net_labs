@model FormImplement.Models.BillsModel

<!-- General Form Elements -->
<div class="pagetitle">
    <h1>Bills</h1>
</div><!-- End Page Title -->

<form asp-action="BillSave" asp-controller="Bills" method="post">
    <div class="row mb-3">
     
        <div class="col-sm-10">
            <input asp-for="BillID" type="hidden" class="form-control" placeholder="Bill ID" />
            <span asp-validation-for="BillID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="BillDate" class="col-sm-2 col-form-label">Bill Date</label>
        <div class="col-sm-10">
            <input asp-for="BillDate" class="form-control" placeholder="Bill Date" />
            <span asp-validation-for="BillDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="BillNumber" class="col-sm-2 col-form-label">Bill Number</label>
        <div class="col-sm-10">
            <input asp-for="BillNumber" class="form-control" placeholder="Bill Number" />
            <span asp-validation-for="BillNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.OrderID, "Order ID", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID" , "OrderID"))">
                <option value="">Select OrderID</option>
            </select>
            @Html.ValidationMessageFor(m => m.OrderID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        <label for="TotalAmount" class="col-sm-2 col-form-label">Total Amount</label>
        <div class="col-sm-10">
            <input asp-for="TotalAmount" class="form-control" placeholder="Total Amount" />
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="Discount" class="col-sm-2 col-form-label">Discount</label>
        <div class="col-sm-10">
            <input asp-for="Discount" class="form-control" placeholder="Discount" />
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="NetAmount" class="col-sm-2 col-form-label">Net Amount</label>
        <div class="col-sm-10">
            <input asp-for="NetAmount" class="form-control" placeholder="Net Amount" />
            <span asp-validation-for="NetAmount" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="UserID" class="col-sm-2 col-form-label">User Name</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="UserID">
                <option value="">Select Customer</option>
                @foreach (var customer in ViewBag.UserList)
                {
                    <option value="@customer.UserID">@customer.UserName</option>
                }
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Submit Form</button>
        </div>
    </div>
</form><!-- End General Form Elements -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
