@model FormImplement.Models.OrderDetailsModel

<!-- General Form Elements -->
<div class="pagetitle">
    <h1>Order Details</h1>
</div><!-- End Page Title -->

<form asp-action="OrderDetailsSave" asp-controller="OrderDetails" method="post">
    <div class="row mb-3">
       
        <div class="col-sm-10">
            <input asp-for="OrderDetailID" type="hidden" class="form-control" placeholder="Order Details ID">
            <span asp-validation-for="OrderDetailID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.OrderID, "Order ID", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID" , "OrderID"))">
                <option value="">Select OrderID</option>
            </select>
            @Html.ValidationMessageFor(m => m.OrderID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.ProductID, "Product Name", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <select class="form-control" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.ProductList, "ProductID", "ProductName"))">
                <option value="">Select Product</option>
            </select>
            @Html.ValidationMessageFor(m => m.ProductID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.UserID, "User Name", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                <option value="">Select User</option>
            </select>
            @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        <label for="Amount" class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
            <input asp-for="Amount" class="form-control" placeholder="Amount">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="TotalAmount" class="col-sm-2 col-form-label">Total Amount</label>
        <div class="col-sm-10">
            <input asp-for="TotalAmount" class="form-control" placeholder="Total Amount">
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Quantity" class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control" placeholder="Quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Submit Form</button>
        </div>
    </div>
       
</form><!-- End General Form Elements -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
