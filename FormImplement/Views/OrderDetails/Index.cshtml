@using System.Data
    <style>
        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #ddd;
        }

        /* Column-specific styling */
        .product-id {
            width: 10%;
        }

        .product-name {
            width: 25%;
        }

        .product-price {
            width: 15%;
        }

        .product-code {
            width: 15%;
        }

        .description {
            width: 25%;
        }

        .user-id {
            width: 10%;
        }
    </style>

<div class="row mb-3">
    <div class="col-sm-10">
        <a asp-controller="OrderDetails" asp-action="Form" type="submit" class="btn btn-primary">Add</a>
    </div>
</div>
    <table>
        <thead>
            <tr>
                <th class="product-id">OrderDetailId</th>
                <th class="product-name">OrderId</th>
                <th class="product-price">ProductName</th>
                <th class="product-code">UserName</th>
                <th class="description">Amount</th>
                <th class="user-id">TotalAmount</th>
                <th class="user-id">Quantity</th>
            <th class="action">Action</th>

            </tr>
        </thead>
        <tbody>

        @foreach (DataRow dataRow in Model.Rows)
            {
                <tr>
                    <td>@dataRow["OrderDetailId"]</td>
                    <td>@dataRow["OrderId"]</td>
                    <td>@dataRow["ProductName"]</td>
                    <td>@dataRow["UserName"]</td>
                    <td>@dataRow["Amount"]</td>
                    <td>@dataRow["TotalAmount"]</td>
                    <td>@dataRow["Quantity"]</td>
                <td>
                    <a asp-controller="OrderDetails" asp-action="Form" asp-route-OrderDetailID="@dataRow["OrderDetailID"]">
                        <button class="btn btn-success m-1">UPDATE</button>
                    </a>

                    <form method="post" asp-controller="OrderDetails" asp-action="OrderDetailsDelete">
                        <input type="hidden" name="OrderDetailID" value="@dataRow["OrderDetailID"]" />
                        <button class="btn btn-danger m-1">DELETE</button>
                    </form>
                </td>
                </tr>
            }
        </tbody>
    </table>

