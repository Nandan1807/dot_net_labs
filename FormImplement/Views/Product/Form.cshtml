@model FormImplement.Models.ProductModel

<!-- General Form Elements -->
<div class="pagetitle">
    <h1>Product Details</h1>
</div><!-- End Page Title -->
@using (Html.BeginForm("ProductSave", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group row mb-3">
        <div class="col-sm-10">
            @Html.HiddenFor(m => m.ProductID, new { @class = "form-control", placeholder = "Product ID" })
            @Html.ValidationMessageFor(m => m.ProductID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.ProductName, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Product Name" })
            @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.ProductPrice, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ProductPrice, new { @class = "form-control", placeholder = "Product Price" })
            @Html.ValidationMessageFor(m => m.ProductPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.ProductCode, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control", placeholder = "Product Code" })
            @Html.ValidationMessageFor(m => m.ProductCode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Description" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.UserID, "User Name", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                <option value="">Select User</option>
            </select>
            @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" class="btn btn-primary" value="Submit Form" />
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}